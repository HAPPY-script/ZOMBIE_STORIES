--cross
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer

-- T·∫°o GUI cho cross
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

-- T·∫°o thanh ngang c·ªßa cross
local horizontalBar = Instance.new("Frame")
horizontalBar.Size = UDim2.new(0, 12, 0, 2) -- D√†i 12px, cao 2px
horizontalBar.AnchorPoint = Vector2.new(0.5, 0.5)
horizontalBar.BackgroundColor3 = Color3.fromRGB(0, 255, 0) -- M√†u xanh l√°
horizontalBar.BorderSizePixel = 0
horizontalBar.Parent = screenGui

-- T·∫°o thanh d·ªçc c·ªßa cross
local verticalBar = Instance.new("Frame")
verticalBar.Size = UDim2.new(0, 2, 0, 12) -- D√†i 12px, r·ªông 2px
verticalBar.AnchorPoint = Vector2.new(0.5, 0.5)
verticalBar.BackgroundColor3 = Color3.fromRGB(0, 255, 0) -- M√†u xanh l√°
verticalBar.BorderSizePixel = 0
verticalBar.Parent = screenGui

-- C·∫≠p nh·∫≠t v·ªã tr√≠ cross d·ª±a tr√™n con tr·ªè chu·ªôt
local function updateCrosshairPosition()
    local mousePosition = UserInputService:GetMouseLocation() -- V·ªã tr√≠ chu·ªôt (m√†n h√¨nh)
    local adjustedPosition = Vector2.new(mousePosition.X, mousePosition.Y - 58) -- Tr·ª´ 36 ƒë·ªÉ b√π thanh c√¥ng c·ª• Roblox

    horizontalBar.Position = UDim2.new(0, adjustedPosition.X, 0, adjustedPosition.Y)
    verticalBar.Position = UDim2.new(0, adjustedPosition.X, 0, adjustedPosition.Y)
end

-- L·∫Øng nghe s·ª± ki·ªán chu·ªôt di chuy·ªÉn
UserInputService.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        updateCrosshairPosition()
    end
end)

-- ƒê·∫£m b·∫£o cross lu√¥n ƒë√∫ng v·ªã tr√≠ khi kh·ªüi ƒë·ªông
updateCrosshairPosition()
