-- Aimbot Zombie Toggle
local aimbotEnabled = false
local ToggleButton = Instance.new("TextButton")
ToggleButton.Size = UDim2.new(0.4, 0, 0.15, 0)
ToggleButton.Position = UDim2.new(0.05, 0, 0.2, 0)
ToggleButton.BackgroundColor3 = Color3.new(0.6, 0, 0)
ToggleButton.Text = "Aimbot: OFF"
ToggleButton.TextColor3 = Color3.new(1, 1, 1)
ToggleButton.Font = Enum.Font.SourceSansBold
ToggleButton.TextSize = 16
ToggleButton.Parent = Frame

ToggleButton.MouseButton1Click:Connect(function()
    aimbotEnabled = not aimbotEnabled
    ToggleButton.Text = aimbotEnabled and "Aimbot: ON" or "Aimbot: OFF"
    ToggleButton.BackgroundColor3 = aimbotEnabled and Color3.new(0, 0.6, 0) or Color3.new(0.6, 0, 0)
end)

-- Keybind Selection
local selectedKey = Enum.KeyCode.F
local isSelectingKey = false

local KeyButton = Instance.new("TextButton")
KeyButton.Size = UDim2.new(0.4, 0, 0.15, 0)
KeyButton.Position = UDim2.new(0.55, 0, 0.2, 0)
KeyButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
KeyButton.Text = "Key: F"
KeyButton.TextColor3 = Color3.new(1, 1, 1)
KeyButton.Font = Enum.Font.SourceSansBold
KeyButton.TextSize = 16
KeyButton.Parent = Frame

KeyButton.MouseButton1Click:Connect(function()
    KeyButton.Text = "Press a key..."
    isSelectingKey = true
end)

UserInputService.InputBegan:Connect(function(input)
    if isSelectingKey and input.UserInputType == Enum.UserInputType.Keyboard then
        selectedKey = input.KeyCode
        KeyButton.Text = "Key: " .. tostring(selectedKey):gsub("Enum.KeyCode.", "")
        isSelectingKey = false
    end
end)

-- Aimbot Logic
local function GetClosestZombieHead()
    local closestZombie = nil
    local closestDist = math.huge
    local screenCenter = Vector2.new(camera.ViewportSize.X / 2, camera.ViewportSize.Y / 2)
    local maxRadius = 200
    
    for _, zombie in pairs(workspace.Zombies:GetChildren()) do
        if zombie:FindFirstChild("Head") then
            local screenPos, onScreen = camera:WorldToViewportPoint(zombie.Head.Position)
            if onScreen then
                local distance = (Vector2.new(screenPos.X, screenPos.Y) - screenCenter).magnitude
                if distance < closestDist and distance <= maxRadius then
                    closestDist = distance
                    closestZombie = zombie
                end
            end
        end
    end
    return closestZombie
end

local function AimAtZombieHead()
    if not aimbotEnabled then return end
    
    local target = GetClosestZombieHead()
    if target and target:FindFirstChild("Head") then
        camera.CFrame = CFrame.new(camera.CFrame.Position, target.Head.Position)
    end
end

UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == selectedKey then
        RunService:BindToRenderStep("Aimbot", Enum.RenderPriority.Camera.Value, AimAtZombieHead)
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.KeyCode == selectedKey then
        RunService:UnbindFromRenderStep("Aimbot")
    end
end)

--speed
-- Khai b√°o bi·∫øn
local speedEnabled = false
local savedSpeed = 16 -- T·ªëc ƒë·ªô m·∫∑c ƒë·ªãnh trong server
local runService = game:GetService("RunService")
local humanoid = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid")

-- T·∫°o n√∫t b·∫≠t/t·∫Øt speed
local SpeedToggleButton = Instance.new("TextButton")
SpeedToggleButton.Size = UDim2.new(0.2, 0, 0.15, 0)
SpeedToggleButton.Position = UDim2.new(0.05, 0, 0.4, 0)
SpeedToggleButton.BackgroundColor3 = Color3.new(0.6, 0, 0)
SpeedToggleButton.Text = "Speed: OFF"
SpeedToggleButton.TextColor3 = Color3.new(1, 1, 1)
SpeedToggleButton.Font = Enum.Font.SourceSansBold
SpeedToggleButton.TextSize = 18
SpeedToggleButton.Parent = Frame

-- H·ªôp nh·∫≠p t·ªëc ƒë·ªô
local SpeedInput = Instance.new("TextBox")
SpeedInput.Size = UDim2.new(0.4, 0, 0.15, 0)
SpeedInput.Position = UDim2.new(0.3, 0, 0.4, 0)
SpeedInput.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
SpeedInput.TextColor3 = Color3.new(1, 1, 1)
SpeedInput.Font = Enum.Font.SourceSansBold
SpeedInput.TextSize = 18
SpeedInput.Text = tostring(savedSpeed)
SpeedInput.Parent = Frame

-- N√∫t Save t·ªëc ƒë·ªô
local SaveSpeedButton = Instance.new("TextButton")
SaveSpeedButton.Size = UDim2.new(0.2, 0, 0.15, 0)
SaveSpeedButton.Position = UDim2.new(0.75, 0, 0.4, 0)
SaveSpeedButton.BackgroundColor3 = Color3.new(0.2, 0.5, 0.8)
SaveSpeedButton.Text = "Save"
SaveSpeedButton.TextColor3 = Color3.new(1, 1, 1)
SaveSpeedButton.Font = Enum.Font.SourceSansBold
SaveSpeedButton.TextSize = 18
SaveSpeedButton.Parent = Frame

-- X·ª≠ l√Ω l∆∞u t·ªëc ƒë·ªô
SaveSpeedButton.MouseButton1Click:Connect(function()
    local inputSpeed = tonumber(SpeedInput.Text)
    if inputSpeed and inputSpeed > 0 then
        savedSpeed = inputSpeed
    else
        SpeedInput.Text = tostring(savedSpeed) -- Kh√¥i ph·ª•c gi√° tr·ªã h·ª£p l·ªá
    end
end)

-- X·ª≠ l√Ω b·∫≠t/t·∫Øt Speed
SpeedToggleButton.MouseButton1Click:Connect(function()
    speedEnabled = not speedEnabled
    if speedEnabled then
        SpeedToggleButton.Text = "Speed: ON"
        SpeedToggleButton.BackgroundColor3 = Color3.new(0, 0.6, 0)
    else
        SpeedToggleButton.Text = "Speed: OFF"
        SpeedToggleButton.BackgroundColor3 = Color3.new(0.6, 0, 0)
        if humanoid then
            humanoid.WalkSpeed = 16 -- Reset t·ªëc ƒë·ªô v·ªÅ m·∫∑c ƒë·ªãnh c·ªßa game
        end
    end
end)

-- Li√™n t·ª•c c·∫≠p nh·∫≠t t·ªëc ƒë·ªô khi b·∫≠t Speed
runService.RenderStepped:Connect(function()
    if speedEnabled and humanoid then
        humanoid.WalkSpeed = savedSpeed
    end
end)

--ifnjump
-- Khai b√°o bi·∫øn
local infiniteJumpEnabled = false
local userInputService = game:GetService("UserInputService")

-- T·∫°o n√∫t b·∫≠t/t·∫Øt Infinite Jump
local InfiniteJumpButton = Instance.new("TextButton")
InfiniteJumpButton.Size = UDim2.new(0.35, 0, 0.15, 0)
InfiniteJumpButton.Position = UDim2.new(0.05, 0, 0.6, 0) -- ƒê·∫∑t d∆∞·ªõi ch·ª©c nƒÉng Speed
InfiniteJumpButton.BackgroundColor3 = Color3.new(0.6, 0, 0)
InfiniteJumpButton.Text = "Ifn Jump: OFF"
InfiniteJumpButton.TextColor3 = Color3.new(1, 1, 1)
InfiniteJumpButton.Font = Enum.Font.SourceSansBold
InfiniteJumpButton.TextSize = 18
InfiniteJumpButton.Parent = Frame

-- X·ª≠ l√Ω b·∫≠t/t·∫Øt Infinite Jump
InfiniteJumpButton.MouseButton1Click:Connect(function()
    infiniteJumpEnabled = not infiniteJumpEnabled
    if infiniteJumpEnabled then
        InfiniteJumpButton.Text = "Ifn Jump: ON"
        InfiniteJumpButton.BackgroundColor3 = Color3.new(0, 0.6, 0)
    else
        InfiniteJumpButton.Text = "Ifn Jump: OFF"
        InfiniteJumpButton.BackgroundColor3 = Color3.new(0.6, 0, 0)
    end
end)

-- L·∫Øng nghe s·ª± ki·ªán nh·∫•n ph√≠m ƒë·ªÉ k√≠ch ho·∫°t nh·∫£y v√¥ h·∫°n
userInputService.JumpRequest:Connect(function()
    if infiniteJumpEnabled then
        local player = game.Players.LocalPlayer
        if player.Character and player.Character:FindFirstChildOfClass("Humanoid") then
            player.Character:FindFirstChildOfClass("Humanoid"):ChangeState(Enum.HumanoidStateType.Jumping)
        end
    end
end)

